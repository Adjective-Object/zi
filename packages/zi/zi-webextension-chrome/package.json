{
    "name": "zi-webextension-chrome",
    "scripts": {
        "typecheck": "tsc -b ./tsconfig.json",
        "bundle": "esbuild src/*.ts --bundle --outdir=dist",
        "build": "npm-run-all -p build:types build:scripts",
        "lint": "prettier --write src/**/*",
        "fixlint": "prettier --check src/**/*",
        "build:types": "tsc -b ./tsconfig.json",
        "build:scripts": "esbp",
        "build:cjs": "esbp --cjs-only",
        "build:mjs": "esbp --mjs-only"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.157",
        "@types/webextension-polyfill": "^0.8.0",
        "esbp": "workspace:*",
        "esbuild": "^0.12.28",
        "eslint": "^7.32.0",
        "prettier": "^2.3.2",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "webextension-polyfill": "^0.8.0",
        "zi-webextension-generic": "workspace:*"
    }
}
