{
    "name": "demo-project",
    "main": "lib/cjs/demoProject.js",
    "module": "lib/mjs/demoProject.es.js",
    "types": "lib/demoProject.d.ts",
    "scripts": {
        "build": "npm-run-all -p build:types build:scripts",
        "lint": "prettier --write src/**/*",
        "fixlint": "prettier --check src/**/*",
        "compile-closure": "zi-compile-closure -c tsconfig.json '**/src/**/*.tsx?'",
        "dev": "vite",
        "build:types": "tsc -b ./tsconfig.json",
        "build:scripts": "esbp",
        "build:cjs": "esbp --cjs-only",
        "build:mjs": "esbp --mjs-only"
    },
    "devDependencies": {
        "esbp": "workspace:*",
        "esbuild": "^0.12.28",
        "eslint": "^7.32.0",
        "prettier": "^2.3.2",
        "rollup": "^2.56.3",
        "rollup-plugin-zi-import-hijack": "workspace:*",
        "typescript": "^4.4.3",
        "vite": "^2.5.1",
        "zi-compile-closure": "workspace:packages/zi/zi-compile-closure"
    }
}
