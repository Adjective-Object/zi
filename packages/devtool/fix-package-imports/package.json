    "devDependencies": {
        "@types/builtin-modules": "^3.1.1",
        "@types/comment-json": "^2.4.2",
        "@types/diff": "^5.0.0",
        "@types/node": "^14.14.45",
        "esbp": "workspace:*",
        "esbuild": "^0.12.28",
